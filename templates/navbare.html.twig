

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">{{ 'header.menu.titre'|trans({}, "homepage") }}</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('home') }}">{{ 'header.menu.homepage'|trans({}, "homepage") }}<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('product_index') }}">{{ 'header.menu.products'|trans({}, "homepage") }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('post_index') }}">{{ 'header.menu.posts'|trans({}, "homepage") }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('article_index') }}">{{ 'header.menu.aricles'|trans({}, "homepage") }}</a>
                </li>
            </ul>
            <div class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                {{ 'header.menu.languages'|trans({}, "homepage") }}
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="{{ path('security_switch_locale', {'language': 'fr'}) }}">{{ 'header.menu.fr'|trans({}, "homepage") }}</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="{{ path('security_switch_locale', {'language': 'en'}) }}">{{ 'header.menu.en'|trans({}, "homepage") }}</a>
            </div>
        </div>
            <ul class="navbar-nav my-2 my-lg-0">
                {% if not app.user %}
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('security_login') }}">{{ 'header.menu.logIn'|trans({}, "homepage") }}</a>
                    </li>
                {% else %}
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('security_logout') }}">{{ 'header.menu.logOut'|trans({}, "homepage") }}</a>
                    </li>
                {% endif %}
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('security_registration') }}">{{ 'header.menu.signOn'|trans({}, "homepage") }}</a>
                </li>
            </ul>
        </div>
    </nav>


{% endblock %}